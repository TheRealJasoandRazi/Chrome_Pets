{
    "manifest_version": 3,
    "name": "Chrome Pets",
    "description": "A digital duck pet for you!",
    "version": "1.0",
    "action": {
      "default_popup": "Home_PopUp.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["Pet.js"]
        }
      ],
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "windows",
      "webNavigation"
    ]
  }